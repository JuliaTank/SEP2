            <PasswordField fx:id="passwordRepeatField" GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Label prefHeight="18.0" prefWidth="322.0" text="Join us!" GridPane.columnIndex="2" GridPane.halignment="CENTER">
               <font>
                  <Font name="Verdana" size="14.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#onSignUp2Button" text="Sign up" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label fx:id="errorLabel" prefHeight="17.0" prefWidth="382.0" textFill="#e10505" GridPane.columnIndex="2" GridPane.rowIndex="5" />
